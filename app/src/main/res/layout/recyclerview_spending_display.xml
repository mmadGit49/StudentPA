<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_view_design"
    android:id="@+id/recycler_spending_display"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewSpendDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/note_custom_design"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="2dp"
        android:text="@string/spending_date"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewSpendTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/note_custom_design"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="2dp"
        android:text="@string/spending_total"
        android:textSize="18sp" />

</LinearLayout>