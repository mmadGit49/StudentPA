<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_view_design"
    android:id="@+id/recyclerview_note_display"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="30"
            android:layout_marginTop="32dp"
            android:background="@drawable/note_custom_design"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="8dp"
            android:text="@string/Title_header"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCurrentUserDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="32dp"
            android:layout_weight="70"
            android:background="@drawable/note_custom_design"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="8dp"
            android:text="@string/user"
            android:textAlignment="viewEnd"
            android:textColor="@color/ic_launcher_background"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewMilestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/note_custom_design"
        android:padding="8dp"
        android:text="@string/text_header"
        android:textSize="16sp" />
</LinearLayout>