<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_margin="8dp"
android:padding="8dp"
android:background="@drawable/list_view_design"
android:id="@+id/recyclerview_schedule_display"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewScheduleTitleDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="2dp"
        android:text="@string/schedule_title"
        android:textAlignment="center"
        android:textSize="18sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewScheduleTimeFromDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:text="@string/prompt_time_from"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewScheduleDurationDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:text="@string/prompt_duration"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewScheduleDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:text="@string/spending_date"
        android:textAlignment="center" />

</LinearLayout>

</LinearLayout>